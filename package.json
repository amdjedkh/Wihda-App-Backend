{
  "name": "wihda-backend",
  "version": "1.0.0",
  "description": "Wihda Backend - Cloudflare Workers API for neighborhood civic application",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 execute wihda-db --local --file=./migrations/schema.sql",
    "db:migrate:remote": "wrangler d1 execute wihda-db --remote --file=./migrations/schema.sql",
    "db:seed": "wrangler d1 execute wihda-db --local --file=./migrations/seed.sql",
    "db:seed:remote": "wrangler d1 execute wihda-db --remote --file=./migrations/seed.sql",
    "tail": "wrangler tail",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "jose": "^5.9.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.114.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
